<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="49dp">

            <TextView
                android:id="@+id/tv_coordi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:text="코디"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="@color/main_color_1"
                android:gravity="top"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/btn_write_post"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background_gender_checked">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="글 쓰기"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingStart="17dp"
                    android:paddingEnd="17dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="방구석 스타일리스트에게 \n도움을 요청하세요."
                android:textColor="@color/main_color_1"
                android:paddingStart="10dp"
                android:textSize="14sp"
                android:textFontWeight="300"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/tv_coordi"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            app:layout_constraintTop_toBottomOf="@id/top_bar"
            android:layout_marginTop="37dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            app:tabGravity="start"
            app:tabIndicatorHeight="0dp"
            app:tabMode="scrollable"
            app:tabTextColor="#FF8B8B8B"
            app:tabTextAppearance="@style/CustomTabTextAppearance"
            app:tabSelectedTextColor="@color/main_color_1"
            app:tabIndicatorColor="@color/main_color_1"
            tools:ignore="MissingConstraints">

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tab_vote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="투표"
                />
            <com.google.android.material.tabs.TabItem
                android:id="@+id/tab_request"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="코디 요청"/>

        </com.google.android.material.tabs.TabLayout>

        <View
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/tabLayout"
            android:layout_height="1dp"
            android:background="@color/main_color_1"/>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            app:layout_constraintTop_toBottomOf="@id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="230dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/post_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="24dp"
                android:paddingEnd="16dp"
                android:paddingTop="16dp"
                android:layout_marginBottom="12dp"
                android:paddingBottom="16dp"
                android:background="@drawable/bg_post_gray"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/tvTitle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="이 신발엔 무엇이 더 잘 어울릴까요?"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/tvVoteCount1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="124명 투표"
                    android:textSize="8sp"
                    android:textColor="@color/main_color_1"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/post_2"
                app:layout_constraintTop_toBottomOf="@id/post_1"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="24dp"
                android:paddingEnd="16dp"
                android:paddingTop="16dp"
                android:layout_marginBottom="12dp"
                android:paddingBottom="16dp"
                android:background="@drawable/bg_post_gray"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/tvTitle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="빨간구두 롱 코트 VS 삭스부츠 롱 코트"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/tvVoteCount2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="12명 투표"
                    android:textSize="8sp"
                    android:textColor="@color/main_color_1"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/post_3"
                app:layout_constraintTop_toBottomOf="@id/post_2"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="24dp"
                android:paddingEnd="16dp"
                android:paddingTop="16dp"
                android:layout_marginBottom="12dp"
                android:paddingBottom="16dp"
                android:background="@drawable/bg_post_gray"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/tvTitle3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="둘 중에 무슨 옷이 더 실용적일까요?"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/tvVoteCount3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="124명 투표"
                    android:textSize="8sp"
                    android:textColor="@color/main_color_1"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/post_4"
                app:layout_constraintTop_toBottomOf="@id/post_3"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="24dp"
                android:paddingEnd="16dp"
                android:paddingTop="16dp"
                android:layout_marginBottom="12dp"
                android:paddingBottom="16dp"
                android:background="@drawable/bg_post_gray"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/tvTitle4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="캐주얼에 흰 시계? 은 시계?"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/tvVoteCount4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="71명 투표"
                    android:textSize="8sp"
                    android:textColor="@color/main_color_1"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>