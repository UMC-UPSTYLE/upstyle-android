<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="#000000">

    <!-- 이미지와 선택 버튼을 감싸는 FrameLayout -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="160dp">

        <!-- 아이템 이미지 -->
        <ImageButton
            android:id="@+id/item_image"
            android:layout_width="165dp"
            android:layout_height="165dp"
            android:layout_marginStart="5dp"
            android:contentDescription="아이템 이미지"
            android:background="@drawable/rounded_image"
            android:clipToOutline="true"
            android:scaleType="centerCrop" />

        <!-- ic_unselected 버튼 (이미지 오른쪽 상단에 배치) -->
        <ImageButton
            android:id="@+id/icunselected"
            android:layout_width="27.6dp"
            android:layout_height="27.6dp"
            android:layout_marginTop="7.6dp"
            android:layout_marginEnd="12.5dp"
            android:background="@null"
            android:src="@drawable/ic_unselected"
            android:contentDescription="선택되지 않음 버튼"
            android:padding="4dp"
            android:layout_gravity="end|top"/>
    </FrameLayout>

    <!-- 아이템 제목 -->
    <TextView
        android:id="@+id/item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"/>
</LinearLayout>
