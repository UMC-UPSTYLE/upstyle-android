<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 계정 타이틀-->
    <TextView
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="계정"
        android:textSize="24sp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="49dp"
        android:layout_marginBottom="30dp"
        android:textColor="@color/main_color_1"
        android:fontFamily="@font/pretendard_medium"
        android:textFontWeight="800"
        tools:ignore="MissingConstraints" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp">

        <!-- 사용자 정보 (닉네임) -->
        <TextView
            android:id="@+id/userNickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:text="콩콩팥팥"
            android:textSize="18sp"
            android:layout_marginTop="40dp"
            android:textColor="@color/white"
            android:fontFamily="@font/pretendard_medium"
            android:textFontWeight="700"
            tools:ignore="MissingConstraints" />

        <!-- 사용자 정보 (이메일) -->
        <TextView
            android:id="@+id/userEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:text="kcb8167@gmail.com"
            android:textSize="11sp"
            android:layout_marginTop="25dp"
            android:textColor="@color/white"
            android:fontFamily="@font/pretendard_medium"
            android:textFontWeight="400"
            tools:ignore="MissingConstraints" />

        <!-- 내 프로필 버튼 -->
        <ImageButton
            android:id="@+id/myProfileBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="273dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/myprofilebtn"
            android:background="@null"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



    <View
        android:layout_width="420dp"
        android:layout_height="1dp"
        android:layout_marginTop="28dp"
        android:background="@color/main_color_1" />

    <!-- 약관 및 정책 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="약관 및 정책"
        android:textSize="9sp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="11dp"
        android:textColor="@color/darkYellow"
        android:fontFamily="@font/pretendard_medium"
        android:textFontWeight="700"
        tools:ignore="MissingConstraints" />

    <View
        android:layout_width="420dp"
        android:layout_height="1dp"
        android:layout_marginTop="11dp"
        android:background="@color/main_color_1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="개인정보처리방침"
        android:textSize="13sp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="17dp"
        android:textColor="@color/white"
        android:fontFamily="@font/pretendard_medium"
        android:textFontWeight="700"
        tools:ignore="MissingConstraints" />

    <View
        android:layout_width="420dp"
        android:layout_height="1dp"
        android:layout_marginTop="17dp"
        android:background="@color/main_color_1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="서비스이용약관"
        android:textSize="13sp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="17dp"
        android:textColor="@color/white"
        android:fontFamily="@font/pretendard_medium"
        android:textFontWeight="700"
        tools:ignore="MissingConstraints" />

    <View
        android:layout_width="420dp"
        android:layout_height="1dp"
        android:layout_marginTop="17dp"
        android:background="@color/main_color_1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="사업자정보"
        android:textSize="13sp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="17dp"
        android:textColor="@color/white"
        android:fontFamily="@font/pretendard_medium"
        android:textFontWeight="700"
        tools:ignore="MissingConstraints" />

    <View
        android:layout_width="420dp"
        android:layout_height="1dp"
        android:layout_marginTop="17dp"
        android:background="@color/main_color_1" />

    <!-- 로그인 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="로그인"
        android:textSize="9sp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="11dp"
        android:textColor="@color/darkYellow"
        android:fontFamily="@font/pretendard_medium"
        android:textFontWeight="700"
        tools:ignore="MissingConstraints" />

    <View
        android:layout_width="420dp"
        android:layout_height="1dp"
        android:layout_marginTop="11dp"
        android:background="@color/main_color_1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="로그아웃"
        android:textSize="13sp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="17dp"
        android:textColor="@color/white"
        android:fontFamily="@font/pretendard_medium"
        android:textFontWeight="700"
        tools:ignore="MissingConstraints" />

    <View
        android:layout_width="420dp"
        android:layout_height="1dp"
        android:layout_marginTop="17dp"
        android:background="@color/main_color_1" />


</LinearLayout>
